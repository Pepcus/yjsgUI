{
  "schema": {
    "type": "object",
    "properties": {
      "attendanceFile": {
        "type": "string"
      },
      "selectedDay": {
        "title": "Select Day:",
        "type": "string",
        "enum": [
          "1",
          "2",
          "3",
          "4",
          "5",
          "6",
          "7",
          "8"
        ],
        "enumNames": [
          "Day 1",
          "Day 2",
          "Day 3",
          "Day 4",
          "Day 5",
          "Day 6",
          "Day 7",
          "Day 8"
        ]
      }
    },
    "required": ["attendanceFile", "selectedDay"]
  },
  "uiSchema": {
    "ui:order": [
      "attendanceFile",
      "selectedDay"
    ],
    "attendanceFile": {
      "ui:field": "UploadFileField",
      "ui:options": {
        "style": {
          "fieldStyle": {
            "width": "88%",
            "margin-left": "30px"
          }
        },
        "label": false,
        "btnProps" : {
          "color": "tertiary",
          "width": "24px",
          "margin-right": "10px"
        }
      },
      "ui:widget": "file"
    },
    "selectedDay": {
      "ui:placeholder": "कृपया एक चुनिए . . .",
      "ui:field": "SelectList",
      "ui:options": {
        "style": {
          "fieldStyle": {
            "width": "75%",
            "margin-left": "20px"
          },
          "titleStyle": {
            "margin-left": "20px"
          }
        }
      }
    }
  }
}